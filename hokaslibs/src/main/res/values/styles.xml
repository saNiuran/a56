<resources>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@drawable/progress_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="view_line_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_text_dddddd</item>
        <item name="android:layout_height">@dimen/dp_1</item>
    </style>
    <style name="view_line_2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_text_dddddd</item>
        <item name="android:layout_height">@dimen/dp_2</item>
    </style>
    <style name="view_line_5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_text_dddddd</item>
        <item name="android:layout_height">@dimen/dp_5</item>
    </style>
    <style name="view_line_5_transparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_5</item>
    </style>
    <style name="view_line_10">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_text_dddddd</item>
        <item name="android:layout_height">@dimen/dp_10</item>
    </style>
    <!-- 定义按钮样式 -->
    <style name="widget_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingLeft">@dimen/dp_12</item>
        <item name="android:paddingRight">@dimen/dp_12</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/bottom_tab_text_color_selector</item>
    </style>

    <!-- 定义按钮样式 -->
    <style name="widget_button_style_evaluate">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bottom_tab_text_color_selector</item>
        <item name="android:textColor">@color/bottom_tab_text_color_selector</item>
    </style>

    <style name="Dialog.NoTitle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationPicker</item>
    </style>

    <style name="AnimationPicker" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!-- 输入支付密码 -->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <!-- 自定义仿IOS的AlertDialog的样式 -->
    <style name="AlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="LetterIndexTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dp_20</item>
        <item name="android:paddingRight">@dimen/side_letter_bar_width</item>
        <item name="android:paddingTop">@dimen/dp_15</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/color_text_999999</item>
    </style>
</resources>
