<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fffdf6"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="246px"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivIconHead"
            android:layout_width="70px"
            android:layout_height="70px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8px"
            android:layout_marginRight="8px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvYRZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sp_geren_renzheng_red"
                    android:paddingBottom="4px"
                    android:paddingLeft="8px"
                    android:paddingRight="8px"
                    android:layout_marginRight="12px"
                    android:paddingTop="4px"
                    android:text="已认证"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="22px" />

                <ImageView
                    android:id="@+id/ivGuaranteeDeposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@mipmap/bg_bao" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="28px"
        android:layout_marginRight="28px"
        android:background="@color/color_view_line" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFDL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14px"
            android:visibility="gone"
            android:textSize="26px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="16px"
            android:background="@drawable/button_xiayibu_round"
            android:gravity="center"
            android:paddingBottom="8px"
            android:paddingLeft="16px"
            android:paddingRight="16px"
            android:paddingTop="8px"
            android:text="@string/queren"
            android:visibility="gone"
            android:textColor="@color/text_button_white"
            android:textSize="28px" />
    </com.zhy.autolayout.AutoFrameLayout>
</com.zhy.autolayout.AutoLinearLayout>