<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeMenuLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:clickable="true"
    app:ios="false">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/allItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_selector_btn"
        android:gravity="center_vertical"
        android:padding="22px">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="12px"
            android:src="@mipmap/ic_bank" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="对方实得分"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tvBankCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14px"
                android:text="对方实得分"
                android:textSize="26px" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/button_bank_delete"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="删除"
        android:textSize="16sp" />

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>