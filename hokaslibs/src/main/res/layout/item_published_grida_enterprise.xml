<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dp_103"
        android:layout_height="@dimen/dp_103"
        android:layout_margin="@dimen/dp_5">

        <com.hokaslibs.utils.ZQImageViewRoundOval
            android:id="@+id/item_grida_image"
            android:layout_width="@dimen/dp_99"
            android:layout_height="@dimen/dp_99"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/item_grida_image2"
            android:layout_width="@dimen/dp_99"
            android:layout_height="@dimen/dp_99"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_centerVertical="true" />
        <Button
            android:id="@+id/item_grida_bt"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_19"
            android:layout_alignParentRight="true"
            android:background="@drawable/bt_dynamic_del"
            android:focusable="false" />
    </RelativeLayout>

</RelativeLayout>